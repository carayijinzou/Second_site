&lt;script type=&#34;text/javascript&#34;&gt; 
function calculate(){

    p = document.getElementById (&#34;principal&#34;).value
    r = (document.getElementById (&#34;interestrate&#34;).value)/12
    n=document.getElementById (&#34;loanterm&#34;).value

    if (isNaN(p) || isNaN(r) || isNaN(n) || p&lt;0 || r&lt;0 || n&lt;0){
        window.alert(&#34;A non-numeric value or negative number was entered. Computation has been halted. Please check that all input is valid. Thank you!&#34;)
        return
    }
    r=r/100
    n=Math.round(n)
    monthpayment = p * r / (1-(1/(1+r)**n))
    document.getElementById(&#34;monthly&#34;).value = monthpayment.toFixed(2)
    document.getElementById(&#34;sum&#34;).value= (monthpayment*n).toFixed(2)

    totalinterest = (n * monthpayment) - p
    document.getElementById(&#34;totalinterest&#34;).value = totalinterest.toFixed(2)

}
&lt;/script&gt;
